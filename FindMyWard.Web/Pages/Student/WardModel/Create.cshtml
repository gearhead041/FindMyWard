@page
@model FindMyWard.Web.Pages.Student.WardModel.CreateModel

@{
    ViewData["Title"] = "Add A Ward";
}

<h1>Create  new Ward</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="WardInfo.Email" class="control-label"></label>
                <input asp-for="WardInfo.Email" class="form-control" />
                <span asp-validation-for="WardInfo.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WardInfo.PhoneNumber" class="control-label"></label>
                <input asp-for="WardInfo.PhoneNumber" class="form-control" />
                <span asp-validation-for="WardInfo.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary my-2" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
