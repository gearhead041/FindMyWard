@page
@model FindMyWard.Web.Pages.Student.WardModel.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>StudentInfo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input hidden asp-for="WardInfo.Id" />
            <div class="form-group">
                <label asp-for="WardInfo.Email" class="control-label"></label>
                <input asp-for="WardInfo.Email" class="form-control" />
                <span asp-validation-for="WardInfo.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WardInfo.PhoneNumber" class="control-label"></label>
                <input asp-for="WardInfo.PhoneNumber" class="form-control" />
                <span asp-validation-for="WardInfo.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
      
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
